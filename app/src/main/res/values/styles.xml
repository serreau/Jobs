<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarSize">60dp</item>
        <item name="android:textSize">14sp</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="bottomNavColor">@color/bottom_nav_color</item>
    </style>

    <style name="LightTheme" parent="@style/AppTheme">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorAccent">@color/light_accent</item>
    </style>

    <style name="DarkTheme" parent="@style/AppTheme">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorAccent">@color/dark_accent</item>
    </style>

</resources>
